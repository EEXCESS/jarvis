{
  "name": "EEXCESS Redesign",
  "version": "0.1",
  "browser_action": {
    "default_title": "EEXCESSRedesign",
    "default_icon": {
      "38": "media/icons/icon38.png"
    }
  },
  "background": {
    "page": "background/background.html"
//    "scripts": [
//      "vendor/jquery-1.10.1.min.js",
//      "vendor/angular/angular.js",
//      "common/browser_specific.js",
//      "background/background.js",
//      "background/keywords.js",
//      "background/messaging.js"
//    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_globs": ["*google*chrome*"],
      "run_at": "document_end",
      "js": [
        "vendor/jquery-1.10.1.min.js",
        "vendor/angular/angular.js",
        "vendor/angular-material/angular-material.js",
        "vendor/angular-animate/angular-animate.js",
        "vendor/angular-aria/angular-aria.js",
        "vendor/angular-loading-bar/src/loading-bar.js",
        "common/browser_specific.js",
        "paragraphDetection/ContextDetector.js",
        "app.js",
        "md-config.js",
        "directive/paragraph-directive.js",
        "directive/paragraph-directive-controller.js",
        "result-dialog/result-dialog-controller.js"
      ],
      "css": ["media/css/styles.css",
      "vendor/angular-material/angular-material.css"]
    }
  ],
  "web_accessible_resources": [
    "options/*",
    "media/*",
    "vendor/*",
    "directive/*",
    "result-dialog/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "<all_urls>",
    "geolocation",
    "history",
    "background",
    "storage"
  ],
  "options_page": "settings/settings.html"
}

